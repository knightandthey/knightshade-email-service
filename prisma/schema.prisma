// Prisma schema for knightshade-email-service
// SQLite database for local development

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model EmailLog {
  id         String   @id @default(cuid())
  to         String
  cc         String?
  bcc        String?
  from       String
  subject    String
  template   String
  variables  Json?
  status     String
  error      String?
  createdAt  DateTime @default(now())
  messageId  String?
}


